<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.learning.data.mapper.ClassmateMapper">

    <insert id="save" parameterType="java.util.Map">
        INSERT INTO `learning`.`learning_classmate`
        (`room_id`,
        `user_id`,
        `user_nickname`)
        VALUES
        (#{roomId},
        #{student.id},
        #{student.nickname});
    </insert>

</mapper>